{
  "GET /api": {
    "description": "Returns a list of all available API endpoints."
  },
  
  "POST /api/users": {
    "description": "Creates a new user.",
    "exampleRequest": {
      "username": "Sweetea 456",
      "email": "sweetea@gmail.com"
    },
    "exampleResponse": {
      "user_id": "5",
      "username": "Sweetea 456",
      "email": "sweetea@gmail.com"
    }
  },

  "POST /api/files/upload": {
    "description": "Uploads a new PDF file, extracts its text, and stores the data.",
    "exampleRequest": {
      "originalName": "wiki.pdf",
      "fileUrl": "https://fileurl.com",
      "extractedText": "Sample text",
      "title": "The life of dogs",
      "author": "Arthur J Miller",
      "keywords": "#dogs",
      "pageCount": 1,
      "creator": "Microsoft",
      "isProcessed": false
    },
    "exampleResponse": {
      "documentId": "document_id",
      "originalName": "wiki.pdf",
      "fileUrl": "https://fileurl.com",
      "extractedText": "Sample text",
      "isProcessed": false,
      "title": "The life of dogs",
      "author": "Arthur J Miller",
      "keywords": "#dogs",
      "pageCount": 1,
      "creator": "Microsoft"
    }
  },

  "POST /api/generate_quiz": {
    "description": "Triggers quiz generation by Gemini AI and stores the quiz data.",
    "exampleRequest": {
      "documentId": "doc123"
    },
    "exampleResponse": {
      "message": "Quiz generated successfully"
    }
  },

  "POST /api/quizzes": {
    "description": "Stores a new quiz record.",
    "exampleRequest": {
      "user_id": 1,
      "quiz_name": "Dogs Quiz"
    },
    "exampleResponse": {
      "quiz_id": "quiz123",
      "user_id": 1,
      "quiz_name": "Dogs Quiz",
      "created_at": "2025-04-16T10:00:00Z"
    }
  },

  "GET /api/quizzes": {
    "description": "Retrieves all quizzes, optionally sorted or filtered.",
    "queries": ["score", "sort_by", "order"],
    "exampleResponse": {
      "quizzes": [
        {
          "quiz_id": "quiz123",
          "quiz_name": "Dogs Quiz",
          "score": "80%",
          "created_at": "2025-04-16T10:00:00Z"
        }
      ]
    }
  },

  "GET /api/quizzes/:user_id": {
    "description": "Fetches all quizzes attempted by a specific user."
  },

  "PATCH /api/quizzes/:quiz_id": {
    "description": "Updates the score of a specific quiz.",
    "exampleRequest": {
      "score": "85%"
    },
    "exampleResponse": {
      "quiz_id": "quiz123",
      "score": "85%"
    }
  },

  "DELETE /api/quizzes/:quiz_id": {
    "description": "Deletes a quiz by ID."
  },

  "POST /api/questions": {
    "description": "Adds generated questions to a quiz.",
    "exampleRequest": {
      "quiz_id": "quiz123",
      "questions": [
        {
          "question_text": "What is the biggest animal?",
          "correct_answer": "C",
          "answer_options": {
            "A": "Lion",
            "B": "Tiger",
            "C": "Blue Whale",
            "D": "Elephant"
          }
        }
      ]
    }
  },

  "GET /api/questions/:quiz_id": {
    "description": "Retrieves questions for a specific quiz."
  },

  "POST /api/answer_attempt": {
    "description": "Saves the user's answer to a question.",
    "exampleRequest": {
      "question_id": 1,
      "user_id": 1,
      "selected_option": "B"
    },
    "exampleResponse": {
      "attempt_id": "attempt_123",
      "correct": false
    }
  },

  "GET /api/answer_attempt/:question_id": {
    "description": "Fetches a user's answer attempt for a specific question."
  },

  "POST /api/attempt": {
    "description": "Creates a new quiz attempt for a user.",
    "exampleRequest": {
      "user_id": 1,
      "quiz_id": "quiz123"
    },
    "exampleResponse": {
      "attempt_id": "attempt_456"
    }
  }
}
