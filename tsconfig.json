{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": false,
    "lib": ["ES2015", "DOM"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
